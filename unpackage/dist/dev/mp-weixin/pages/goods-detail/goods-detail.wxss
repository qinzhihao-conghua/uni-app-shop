.gomeImgLoad {
  width: 100%;
  height: auto;
}
.goods-detail .line {
  height: 10rpx;
  width: 750rpx;
  background-color: #eee;
}
.goods-detail .swip {
  height: 700rpx;
}
.goods-detail .swip image {
  width: 100%;
  height: 100%;
}
.goods-detail .pric-con {
  padding: 20rpx;
}
.goods-detail .pric-con .pric-item {
  font-size: 36rpx;
  color: #b50e03;
  line-height: 80rpx;
}
.goods-detail .pric-con .pric-item text:nth-of-type(2) {
  color: #ccc;
  font-size: 28rpx;
  text-decoration: line-through;
  margin-left: 30rpx;
}
.goods-detail .pric-con .goods-name {
  font-size: 32rpx;
  line-height: 60rpx;
}
.goods-detail .info {
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.goods-detail .info .info-num {
  font-size: 32rpx;
  line-height: 60rpx;
}
.goods-detail .detail {
  padding: 20rpx;
}
.goods-detail .detail .title {
  font-size: 32rpx;
  line-height: 60rpx;
  text-align: center;
}
.goods-detail .detail .content {
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
}
.goods-detail .detail .content .content-tit {
  text-align: center;
}

